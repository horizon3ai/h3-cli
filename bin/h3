    json_params=`cat <<HERE
{"search":"$*"}
HERE
`
    res=`h3-gql client_accounts $json_params` 
    rc=$?
    if [ $rc -eq 0 ]; then
        cat <<<$res | jq '.data.client_accounts_page.client_accounts[]'
